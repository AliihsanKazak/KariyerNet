@model Jobs 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<body>
    <div class="container" style="display: flex;justify-content: center;align-items: center;background-color:lightslategrey">
        <form class="m-t" method="post" role="form" asp-action="Index" enctype="multipart/form-data">
            <br/>
            <br/>
            <h2 style="text-align: center">İŞ İLANI VER</h2>
            <div class="form-group">
                <label>Açıklama</label><br/>
                <span asp-validation-for="@Model.Aciklama" class="text-danger"></span>
                <textarea cols="50" asp-for="@Model.Aciklama" ></textarea>
            </div>
            <br/>
            <div class="form-group">
                <label>Yetenekler</label><br/>
                <span asp-validation-for="@Model.Yetenekler" class="text-danger"></span>
                <textarea cols="50" asp-for="@Model.Yetenekler" ></textarea>
            </div>
            <br/>
            <div class="form-group">
                <label>Sorumluluklar</label><br/>
                <span asp-validation-for="@Model.Sorumluluklar" class="text-danger"></span>
                <textarea cols="50" asp-for="@Model.Sorumluluklar" ></textarea>
            </div>
            <br/>
            
            <div class="form-group" style="width: 100%">
                <label>Maaş</label><br/>
                <span asp-validation-for="@Model.Maas" class="text-danger"></span>
                <input type="number" asp-for="@Model.Maas" class="form-control"  aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>
            <br/>
            <div class="form-group" style="width: 100%">
                <label>Yayın Tarihi</label><br/>
                <span asp-validation-for="@Model.YayinTarihi" class="text-danger"></span>
                <input type="date" asp-for="@Model.YayinTarihi" class="form-control" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>
            <br/>
            <div class="form-group" style="width: 100%">
                <label>Yayın Bitiş Tarihi</label><br/>
                <span asp-validation-for="@Model.YayinBitisTarihi" class="text-danger"></span>
                <input type="date" asp-for="@Model.YayinBitisTarihi" class="form-control" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>

            @*             <br /> *@
            @*             <div class="form-group"> *@
            @*                 <span asp-validation-for="@Model.UserName" class="text-danger"></span> *@
            @*                 <input type="text" asp-for="@Model.UserName" class="form-control" placeholder="Username" aria-label="Recipient's username" aria-describedby="basic-addon2"> *@
            @* *@
            @*             </div> *@
            @*             <br /> *@
            @*             *@
            @*             <br /> *@
            <br/>
            <div style="width:100%;display: flex;justify-content: center">
                <input style="align-items: center" type="submit" value="KAYIT OL"/>
                
            </div>
            <br/>
            <br/>
            
            @*             <div class="text-danger" asp-validation-summary=" *@
            @*                  ModelOnly"></div> *@
        </form>

    </div>
</body>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

