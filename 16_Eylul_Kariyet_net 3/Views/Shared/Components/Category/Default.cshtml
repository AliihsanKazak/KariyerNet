@model List<Kategori>


    <div class="container-xxl py-5">
        <div class="container">
            <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">KATEGORİLER</h1>
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                        <a class="cat-item rounded p-4" href="/Home/Jobs/@item.KategoriID">
                            <i class="@item.KategoriGorsel"></i>
                            <h6 class="mb-3">@item.KategoriAdi</h6>
                           
                        </a>
                    </div>
                }


            </div>
        </div>
    </div>