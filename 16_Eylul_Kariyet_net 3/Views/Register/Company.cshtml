@model FirmaViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<body>
    <div class="container" style="display: flex;justify-content: center;align-items: center;background-color:lightslategrey">
        <form class="m-t" method="post" role="form" asp-action="Company" enctype="multipart/form-data">
         
            <br/>
            <h2 style="text-align: center">FİRMA KAYIT EKRANI</h2>
               <br/>
            <div class="form-group">
                <span asp-validation-for="@Model.FirmaAdi" class="text-danger"></span>
                <input type="text" class="form-control" asp-for="@Model.FirmaAdi" placeholder="Firma Adı" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <br/>

            <div class="form-group">
                <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                <input type="email" asp-for="@Model.Mail" class="form-control" placeholder="Mail" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>
            <br/>
            <div class="form-group">
                            <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                            <input type="text" asp-for="@Model.NameSurname" class="form-control" placeholder="Firma Sahibi Ad-Soyad" aria-label="Recipient's username" aria-describedby="basic-addon2">
            </div>
            <br/>
            
            <div class="form-group">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Şifre" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>
            <br/>
            <div class="form-group">
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>

            <br/>
            <div class="form-group">
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                <input type="text" asp-for="@Model.UserName" class="form-control" placeholder="Username" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>
            <br/>
            <div class="form-group">
                                       <span asp-validation-for="@Model.Gorsel" class="text-danger"></span>
                                       <input type="file" accept="image/*"  asp-for="@Model.Gorsel" class="form-control" placeholder="CV YÜKLE" aria-label="Recipient's username" aria-describedby="basic-addon2">
                       
                                   </div><br/>
            <textarea maxlength="624" rows="10" cols="50" asp-for="@Model.FirmaAciklama" placeholder="Açıklama yazınız...">
                

            </textarea>
            <br/>
            <br/>
           <div style="width:100%;display: flex;justify-content: center">
                           <input style="align-items: center" type="submit" value="KAYIT OL"/>
                           
                       </div>
            <div class="text-danger" asp-validation-summary=" ModelOnly"></div>
            <br/>
            <br/>
        </form>

    </div>
</body>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>